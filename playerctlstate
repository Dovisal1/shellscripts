#!/bin/sh

pf="/tmp/playerctlstate"

for player in $(playerctl -l); do
	status=$(playerctl -p "$player" status)
	if [ "$status" = "Playing" ]; then
		echo "$player" > "$pf"
		playerctl -p "$player" "$@"
		exit $?
	fi
done

if [ -e "$pf" ]; then
	player=$(cat "$pf")
	playerctl -p "$player" "$@" || playerctl "$@"
else
	playerctl "$@"
fi

